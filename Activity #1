
import java.util.Scanner;
public class Main {

 public static void main(String[] args) {
  Scanner input = new Scanner(System.in);
  System.out.println("Performance Task");
  System.out.println("Enter 1st Activity:");
  int x = input.nextInt();
  System.out.println("Enter 2nd Activity");
  int y = input.nextInt();
  System.out.println("Enter 3rd Activity:");
  int z = input.nextInt();
  
  int sum;
  sum = x + y + z;
  float quot;
  quot = sum / 3;
  double perc;
  perc = quot *.60;
  
  
  System.out.println("Average is :"+ quot);
  System.out.println("Percentage is :"+ perc);
  
  }
}

