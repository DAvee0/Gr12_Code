import java.util.Scanner;
public class {

public static void main (String[] args) {
  Scanner input = new Scanner(System.in);
  System.out.println("Enter 1st Quarter");
  int x = input.nextInt();
  System.out.println("Enter 2nd Quarter");
  int y = input.nextInt();
  System.out.println("Enter 3rd Quarter");
  int z = input.nextInt();

int sum;
sum = x + y + z;
double per;
per = sum * .20;
int avg = sum / 3;

System.out.println("The Percentage is:" + per);
System.out.println("The Average is:" + avg);


}
}
